page {
  background-color: #0e0b1f;
  height: 100%;
}
.mv-box {
  height: 30vh;
  width: 100vw;
}
.comment .comment-item {
  margin-bottom: 18rpx;
  padding: 32rpx 24rpx 30rpx 24rpx;
  font-size: 28rpx;
  color: #FFFFFF;
  background-color: #0e0b1f;
}
.comment .comment-item .item-member {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.comment .comment-item .item-avatar {
  width: 60rpx;
  height: 60rpx;
  margin-right: 24rpx;
  border-radius: 60rpx;
}
.comment .comment-item .item-name {
  color: #FFFFFF;
  line-height: 60rpx;
  line-height: 1;
}
.comment .comment-item .star-wrp {
  margin-left: 30rpx;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.comment .comment-item .item-star {
  width: 24rpx;
  height: 24rpx;
}
.comment .comment-item .item-content {
  margin: 24rpx 0 18rpx 0;
  font-size: 28rpx;
  line-height: 40rpx;
}
.comment .comment-item .item-pics {
  white-space: nowrap;
  overflow: auto;
  margin-bottom: 24rpx;
}
.comment .comment-item .item-pics .images {
  display: inline-block;
  width: 186rpx;
  height: 186rpx;
  overflow: hidden;
}
.comment .comment-item .item-pics .images .item-pic {
  width: 186rpx;
  vertical-align: bottom;
  display: inline-block;
  margin-right: 18rpx;
  background-size: cover;
}
.comment .comment-item .item-date {
  font-size: 24rpx;
  color: #FFFFFF;
  vertical-align: top;
  margin-top: 20rpx;
}

