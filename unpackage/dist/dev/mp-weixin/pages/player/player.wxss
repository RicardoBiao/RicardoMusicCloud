page {
  width: 100%;
  height: 100%;
  background-color: #0e0b1f;
}
.img-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-justify-content: space-around;
          justify-content: space-around;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  width: 100%;
}
.img-box .img {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 414rpx;
  height: 414rpx;
  background-color: #999999;
  border-radius: 50%;
  margin: 300rpx auto 44rpx;
}
.img-box text {
  font-family: Helvetica;
  font-weight: normal;
  font-stretch: normal;
  color: #ffffff;
  margin: 0 auto;
}
.img-box .song-name {
  font-size: 48rpx;
}
.img-box .singer {
  margin: 7rpx auto 62rpx;
  font-size: 24rpx;
}
.img-box .song-content {
  font-size: 28rpx;
  color: #7b0e62;
}
.btn-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  margin: 80rpx 110rpx;
}
.btn-box .btn-icon {
  width: 40rpx;
  height: 40rpx;
}
.py-btn-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  margin: 44rpx 56rpx;
}
.py-btn-box .py-icon {
  width: 26rpx;
  height: 26rpx;
  margin: auto 0;
}

