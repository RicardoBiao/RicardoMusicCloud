<view class="box"><view class="music-box" name="audio"><view class="image-box"><block wx:if="{{musicPaused==1}}"><image class="play-icon" src="../../static/play.png" mode="aspectFill" data-event-opts="{{[['tap',[['musicPlay']]]]}}" bindtap="__e"></image></block><block wx:if="{{musicPaused==0}}"><image class="pause-icon" src="../../static/stop.png" mode="aspectFill" data-event-opts="{{[['tap',[['musicPause']]]]}}" bindtap="__e"></image></block><image class="music-image" mode="aspectFill" src="{{song.artists[0].img1v1Url}}"></image></view><view class="text-box"><text class="text-box-title">{{''+song.name+''}}</text><text class="text-box-centent">{{''+song.artists[0].name+''}}</text><text class="text-box-centent">{{''+current+''}}</text></view></view></view>